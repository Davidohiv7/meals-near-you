{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "components/*": ["src/components/*"],
      "providers/*": ["src/providers/*"],
      "screens/*": ["src/screens/*"],
      "style/*": ["src/style/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"],
      "assets/*": ["assets/*"],
      "services/*": ["src/services/*"],
      "infrastructure/*": ["src/infrastructure/*"]
